<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:HEFrame.Styles.Controls">
    <Style x:Key="HEMessageCardHostStyle" TargetType="local:HEMessageCardHost">
        <Setter Property="FocusVisualStyle" Value="{DynamicResource DefaultControlFocusVisualStyle}" />
        <Setter Property="Panel.ZIndex" Value="999999" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HEMessageCardHost">
                    <Grid>
                        <ItemsControl x:Name="PART_ContainerItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="{TemplateBinding VerticalAlignment}" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style BasedOn="{StaticResource HEMessageCardHostStyle}" TargetType="local:HEMessageCardHost" />
</ResourceDictionary>