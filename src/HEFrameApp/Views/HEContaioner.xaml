<UserControl x:Class="HEFrameApp.Views.HEContaioner" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:HEFrameApp.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="clr-namespace:HEFrame.Styles.Controls;assembly=HEFrame.Styles" Name="root" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <Border Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ui:HEButton HorizontalAlignment="Right" VerticalAlignment="Top" Content="&lt;/&gt;" Click="HEButton_Click"/>
            <ContentPresenter Grid.Row="1" Content="{Binding Content, ElementName=root}" ContentTemplate="{Binding ContentTemplate, ElementName=root}" ContentTemplateSelector="{Binding ContentTemplateSelector, ElementName=root}" />
        </Grid>

    </Border>
</UserControl>
