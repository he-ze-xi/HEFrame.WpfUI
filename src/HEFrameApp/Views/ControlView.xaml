<UserControl x:Class="HEFrameApp.Views.ControlView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:HEFrameApp.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="clr-namespace:HEFrame.Styles.Controls;assembly=HEFrame.Styles" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <local:HEContaioner>
        <ui:HEScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="折叠板" />
                <ui:HEExpander Grid.Row="1" Margin="15,10" Header="标题内容">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1. HEUI 折叠板内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 折叠板内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 折叠板内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 折叠板内容" />
                    </StackPanel>
                </ui:HEExpander>
                <TextBlock Grid.Row="2" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="折叠板" />
                <ui:HEExpander Grid.Row="3" Margin="15,10">
                    <ui:HEExpander.Header>
                        <DockPanel Margin="0,0,20,0" LastChildFill="False">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="20" Height="20" Source="/Images/setting.png" />
                                <TextBlock Margin="10,0" VerticalAlignment="Center" Text="HEUI 参数设置" />
                            </StackPanel>
                            <ui:HEButton Width="80" Margin="0,5" Content="保存设置" DockPanel.Dock="Right" />
                        </DockPanel>
                    </ui:HEExpander.Header>
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 折叠板参数设置" />
                        <TextBlock Margin="0,5" Text="2.HEUI 折叠板参数设置" />
                        <TextBlock Margin="0,5" Text="3.HEUI 折叠板参数设置" />
                        <TextBlock Margin="0,5" Text="4.HEUI 折叠板参数设置" />
                    </StackPanel>
                </ui:HEExpander>
                <TextBlock Grid.Row="4" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="组合框" />
                <ui:HEGroupBox Grid.Row="5" Margin="15,10" Header="标题">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 组合框内容" />
                    </StackPanel>
                </ui:HEGroupBox>
                <TextBlock Grid.Row="6" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="不同颜色组合框" />
                <ui:HEGroupBox Grid.Row="7" Margin="15,10" BorderBrush="{DynamicResource DrangerBrush}" Header="标题">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 组合框内容" />
                    </StackPanel>
                </ui:HEGroupBox>
                <TextBlock Grid.Row="8" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="不同颜色组合框" />
                <ui:HEGroupBox Grid.Row="9" Margin="15,10" BorderBrush="{DynamicResource SuccessBackground}" Header="标题">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 组合框内容" />
                    </StackPanel>
                </ui:HEGroupBox>
                <TextBlock Grid.Row="10" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="组合框" />
                <ui:HEGroupBox Grid.Row="11" Margin="15,10" Header="标题" Style="{DynamicResource HEDesignGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 组合框内容" />
                    </StackPanel>
                </ui:HEGroupBox>
                <TextBlock Grid.Row="12" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="不同颜色组合框" />
                <ui:HEGroupBox Grid.Row="13" Margin="15,10" BorderBrush="{DynamicResource DrangerBrush}" Header="标题" Style="{DynamicResource HEDesignGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 组合框内容" />
                    </StackPanel>
                </ui:HEGroupBox>
                <TextBlock Grid.Row="14" Margin="15,10" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="不同颜色组合框" />
                <ui:HEGroupBox Grid.Row="15" Margin="15,10" BorderBrush="{DynamicResource SuccessBackground}" Header="标题" Style="{DynamicResource HEDesignGroupBoxStyle}">
                    <StackPanel Margin="10">
                        <TextBlock Margin="0,5" Text="1.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="2.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="3.HEUI 组合框内容" />
                        <TextBlock Margin="0,5" Text="4.HEUI 组合框内容" />
                    </StackPanel>
                </ui:HEGroupBox>
            </Grid>
        </ui:HEScrollViewer>
    </local:HEContaioner>
</UserControl>
