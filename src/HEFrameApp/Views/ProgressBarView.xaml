<UserControl x:Class="HEFrameApp.Views.ProgressBarView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:HEFrameApp.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="clr-namespace:HEFrame.Styles.Controls;assembly=HEFrame.Styles" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <local:HEContaioner>
        <ui:HEScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="默认进度条" />
                <ui:HEProgressBar Grid.Row="1" Margin="15,10" Value="50" />
                <TextBlock Grid.Row="2" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="不同颜色进度条" />
                <ui:HEProgressBar Grid.Row="3" Margin="15,10" Foreground="{DynamicResource SuccessBackground}" Value="60" />
                <ui:HEProgressBar Grid.Row="4" Margin="15,10" Foreground="{DynamicResource WarmBrush}" Value="70" />
                <ui:HEProgressBar Grid.Row="5" Height="15" Margin="15,10" Foreground="{DynamicResource DrangerBrush}" Value="80" />
                <TextBlock Grid.Row="6" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="进度条动画" />
                <ui:HEProgressBar Grid.Row="7" Margin="15,10" IsIndeterminate="True" Value="10" />
                <ui:HEProgressBar x:Name="progressBar" Grid.Row="8" Margin="15,10" Value="0" />
                <ui:HEButton Grid.Row="9" Margin="15,10" HorizontalAlignment="Left" Content="动画启动">
                    <ui:HEButton.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="progressBar" Storyboard.TargetProperty="Value" From="0" To="100" Duration="0:0:5" />
                                    <DoubleAnimation Storyboard.TargetName="progressBar2" Storyboard.TargetProperty="Value" From="0" To="100" Duration="0:0:5" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ui:HEButton.Triggers>
                </ui:HEButton>
                <TextBlock Grid.Row="10" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="圆形进度条" />
                <StackPanel Grid.Row="11" Margin="15,10" Orientation="Horizontal">
                    <ui:HEProgressBar x:Name="progressBar2" Style="{DynamicResource HEProgressBarDesignStyle}" Value="0" />
                    <ui:HEProgressBar Margin="10,0" Foreground="{DynamicResource SuccessBackground}" Style="{DynamicResource HEProgressBarDesignStyle}" Value="35" />
                    <ui:HEProgressBar Margin="10,0" Foreground="{DynamicResource WarmBrush}" Style="{DynamicResource HEProgressBarDesignStyle}" Value="85" />
                    <ui:HEProgressBar Margin="10,0" Foreground="{DynamicResource DrangerBrush}" Style="{DynamicResource HEProgressBarDesignStyle}" Value="47" />
                    <ui:HEProgressBar Margin="10,0" IsIndeterminate="True" Style="{DynamicResource HEProgressBarDesignStyle}" Value="67" />
                    <ui:HEProgressBar Width="100" Height="100" StrokeThickness="10" Style="{DynamicResource HEProgressBarDesignStyle}" Value="78">
                        <ui:HEProgressBar.Foreground>
                            <LinearGradientBrush StartPoint="0 0" EndPoint="1 1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStop Offset="0.3" Color="#12c2e9" />
                                    <GradientStop Offset="0.6" Color="#c471ed" />
                                    <GradientStop Offset="0.9" Color="#f64f59" />
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </ui:HEProgressBar.Foreground>
                    </ui:HEProgressBar>
                </StackPanel>
            </Grid>
        </ui:HEScrollViewer>
    </local:HEContaioner>
   

</UserControl>
