<UserControl x:Class="HEFrameApp.Views.ListDataView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:HEFrameApp.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:ui="clr-namespace:HEFrame.Styles.Controls;assembly=HEFrame.Styles" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
    <local:HEContaioner>
        <ui:HEScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="ListBox" />
                <ui:HEListBox Grid.Row="1" Margin="15,10" ItemsSource="{Binding Items}" ThemeType="Light" />
                <TextBlock Grid.Row="2" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="ListView" />
                <ui:HEListView Grid.Row="3" Margin="15,10" ItemsSource="{Binding Items}" ThemeType="Light" />
                <TextBlock Grid.Row="4" Margin="15,0" VerticalAlignment="Center" FontSize="14" Foreground="{StaticResource DarkForeground}" Text="TreeView" />
                <ui:HETreeView Grid.Row="5" Margin="15,10" ThemeType="Light">
                    <ui:HETreeViewItem Header="一级数据" IsExpanded="True" ThemeType="Light">
                        <ui:HETreeViewItem Header="二级数据" ThemeType="Light">
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                        </ui:HETreeViewItem>
                        <ui:HETreeViewItem Header="二级数据" ThemeType="Light">
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                        </ui:HETreeViewItem>
                        <ui:HETreeViewItem Header="二级数据" ThemeType="Light">
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                        </ui:HETreeViewItem>
                    </ui:HETreeViewItem>
                    <ui:HETreeViewItem Header="一级数据" IsExpanded="True" ThemeType="Light">
                        <ui:HETreeViewItem Header="二级数据" ThemeType="Light">
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                        </ui:HETreeViewItem>
                        <ui:HETreeViewItem Header="二级数据" ThemeType="Light">
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                        </ui:HETreeViewItem>
                        <ui:HETreeViewItem Header="二级数据" ThemeType="Light">
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                            <ui:HETreeViewItem Header="三级数据" ThemeType="Light" />
                        </ui:HETreeViewItem>
                    </ui:HETreeViewItem>

                </ui:HETreeView>
            </Grid>
        </ui:HEScrollViewer>
    </local:HEContaioner>
  

</UserControl>
